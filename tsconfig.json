{
  "include": [
    "app"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "module": "es6",
    "lib": [ "es7", "dom" ],
    "target": "es5",
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
